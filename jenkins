@Library ("Shared") _
pipeline {
    agent any
    
    environment {
        SONAR_HOME = tool "Sonarqube"
    }

    stages {
        
        stage('Git Clone') {
            steps {
                echo "cloning the project"
                git_clone("https://github.com/RohanKhanal14/foodcart.git")
                echo "clone successful"
            }
        }
        
        stage('Trivy Scan') {
            steps {
                sh "trivy fs ."
            }
        }
        
        // stage('OWASP') {
        //     steps {
        //         dependencyCheck additionalArguments: '--scan ./', odcInstallation: 'OWASP'
        //         dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
        //     }
        // }
        
        stage('Sonar Scan') {
            steps {
                withSonarQubeEnv("Sonarqube"){
                    sh "$SONAR_HOME/bin/sonar-scanner -Dsonar.projectName=FoodCart -Dsonar.projectKey=FoodCart -X" 
                }
            }
        }
        
        stage('Build') {
            steps {
                echo "Building Docker Images"
                sh 'docker build -t rohankhanal14/foodcart:v2 .'
                echo "Docker build successful"
            }
        }
        
        stage('DockerHub') {
            steps {
                docker_hub("foodcart", "v2")
            }
        }
        
        stage('Deploy') {
            steps {
                echo "Delopy using docker"
                sh 'docker run -d -p 3003:3000 rohankhanal14/foodcart:v2'
            }
        }
    }
    
post {
    success{
        emailext(
            to:"rohankhanal14r@gmail.com",
            from:"rohankhanal14r@gmail.com",
            subject:"Build and Deployed Successfully",
            body: """ <p>The jenkins bulid <b>${env.JOB_NAME}</b> is Successfully Dployed and its bulid number is <b>${env.BUILD_NUMBER}</b></p>""",
            attachLog: true,
            mimeType: 'text/html'
            )
    }
    failure{
        emailext(
            to:"rohankhanal14r@gmail.com",
            from:"rohankhanal14r@gmail.com",
            subject:"Build Failure",
            body: """ <p>The jenkins bulid <b>${env.JOB_NAME}</b> Build Failed and its build number is <b>${env.BUILD_NUMBER}</b></p>""",
            attachLog: true,
            mimeType: 'text/html'
            )
    }
}    
}


